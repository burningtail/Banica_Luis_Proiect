@page
@model Banica_Luis_Proiect.Pages.Automobile.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Automobil</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Automobil.Nume" class="control-label"></label>
                <input asp-for="Automobil.Nume" class="form-control" />
                <span asp-validation-for="Automobil.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Automobil.Client" class="control-label"></label>
                <input asp-for="Automobil.Client" class="form-control" />
                <span asp-validation-for="Automobil.Client" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Automobil.Pret" class="control-label"></label>
                <input asp-for="Automobil.Pret" class="form-control" />
                <span asp-validation-for="Automobil.Pret" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Automobil.DataInchirierii" class="control-label"></label>
                <input asp-for="Automobil.DataInchirierii" class="form-control" />
                <span asp-validation-for="Automobil.DataInchirierii" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="table">
                <table>
                <tr>
                    @{
                    int cnt = 0;
             foreach (var cat in Model.AssignedCategoryDataList)
             {
                if (cnt++ % 3 == 0)
                {
                @:</tr><tr>
                }
                @:<td>
                    <input type="checkbox"
                        name="selectedCategories"
                        value="@cat.CategorieId"
                        @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                    @cat.CategorieId @: @cat.Nume
                @:</td>
                }
                @:</tr>
                }
                </table>
            </div>
         </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
